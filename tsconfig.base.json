{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "paths": {
      "@gitadventure/shared/*": ["./packages/shared/*"],
      "@gitadventure/frontend/*": ["./packages/frontend/*"],
      "@gitadventure/backend/*": ["./packages/backend/*"]
    }
  }
}